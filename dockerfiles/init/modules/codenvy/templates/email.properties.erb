# Configuration of sending email notifications for users
workspace.email.created.enabled=true
workspace.email.added.member.enabled=true
workspace.email.removed.member.enabled=true

# sender email address
che.mail.from_email_address=<%= scope.lookupvar('codenvy::email_from') %>

# Configuration of email notifications
workspace.email.invite.subject=<%= scope.lookupvar('codenvy::workspace_email_invite_subject') %>
organization.email.invite.subject=<%= scope.lookupvar('codenvy::organization_email_invite_subject') %>

#####                     ORGANIZATIONS' NOTIFICATIONS SETTINGS                       #####
che.organization.email.member_added_subject=<%= scope.lookupvar('codenvy::organization_email_member_added_subject') %>
che.organization.email.member_added_template=/email-templates/user_added_to_organization

che.organization.email.member_removed_subject=<%= scope.lookupvar('codenvy::organization_email_member_removed_subject') %>
