che.organization.email.org_removed_subject=<%= scope.lookupvar('codenvy::organization_email_removed_subject') %>
che.organization.email.org_removed_template=/email-templates/organization_deleted

che.organization.email.org_renamed_subject=<%= scope.lookupvar('codenvy::organization_email_renamed_subject') %>
che.organization.email.org_renamed_template=/email-templates/organization_renamed


account.verify.mail.subject=<%= scope.lookupvar('codenvy::account_verify_mail_subject') %>
